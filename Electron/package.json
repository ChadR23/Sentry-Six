{
  "name": "sentry-six-electron",
  "version": "2.0.0",
  "description": "Tesla Dashcam Viewer - Electron Edition with synchronized video playback",
  "main": "working-main.js",
  "homepage": "./",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "electron .",
    "test-simple": "electron simple-main.js",
    "dev": "concurrently \"npm run build:watch\" \"wait-on dist/main.js && electron .\"",
    "pack": "electron-builder",
    "dist": "electron-builder --publish=never",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "tesla",
    "dashcam",
    "video",
    "electron",
    "typescript",
    "synchronization"
  ],
  "author": "Sentry-Six Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "electron-store": "^8.0.0",
    "ffmpeg-static": "^5.0.0",
    "fluent-ffmpeg": "^2.1.0"
  },
  "build": {
    "appId": "com.sentrysix.electron",
    "productName": "Sentry-Six",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/sentry-six-electron.git"
  }
}
