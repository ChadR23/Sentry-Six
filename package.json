{
  "name": "sentry-six-revamped",
  "version": "2026.9.1",
  "description": "Sentry Studio - Tesla Dashcam Viewer",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:mac-intel": "electron-builder --mac --x64",
    "build:mac-apple-silicon": "electron-builder --mac --arm64",
    "build:all": "electron-builder --win --mac"
  },
  "keywords": [
    "tesla",
    "dashcam",
    "sentry",
    "electron"
  ],
  "author": "Scott Vandereems",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.6.0"
  },
  "dependencies": {
    "canvas": "^3.2.0",
    "electron-updater": "^6.1.7",
    "node-machine-id": "^1.1.12",
    "protobufjs": "^7.5.4"
  },
  "build": {
    "appId": "com.sentry-six.revamped",
    "productName": "Sentry-Studio",
    "win": {
      "icon": "assets/Sentry_Six.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "verifyUpdateCodeSignature": false,
      "extraResources": [
        {
          "from": "ffmpeg_bin/ffmpeg.exe",
          "to": "ffmpeg_bin/ffmpeg.exe"
        },
        {
          "from": "ffmpeg_bin/ffprobe.exe",
          "to": "ffmpeg_bin/ffprobe.exe"
        },
        {
          "from": "ffmpeg_bin/README.md",
          "to": "ffmpeg_bin/README.md"
        }
      ]
    },
    "mac": {
      "icon": "assets/Sentry_Six.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ],
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "identity": "Scott Vandereems (6733Y82885)",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "signIgnore": [
        "\\.pak$"
      ],
      "notarize": true,
      "artifactName": "SentryStudio-${version}-macOS.${ext}",
      "x64ArchFiles": "Contents/Resources/ffmpeg_bin/*",
      "asarUnpack": [
        "node_modules/canvas/**/*",
        "node_modules/node-machine-id/**/*"
      ],
      "extraResources": [
        {
          "from": "ffmpeg_bin/ffmpeg",
          "to": "ffmpeg_bin/ffmpeg"
        },
        {
          "from": "ffmpeg_bin/ffprobe",
          "to": "ffmpeg_bin/ffprobe"
        },
        {
          "from": "ffmpeg_bin/README.md",
          "to": "ffmpeg_bin/README.md"
        }
      ]
    },
    "dmg": {
      "icon": "assets/Sentry_Six.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "icon": "assets/Sentry_Six.png"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "LICENSE.txt",
      "package.json",
      "version.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "directories": {
      "output": "release"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "SentryStudioSetup${version}.${ext}",
      "include": "build/installer.nsh"
    },
    "publish": {
      "provider": "github",
      "owner": "ChadR23",
      "repo": "Sentry-Six",
      "releaseType": "release"
    }
  }
}